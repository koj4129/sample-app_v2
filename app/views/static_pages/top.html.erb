<% provide(:title, "Top") %>
<div class="container">
  <div class="row">
    <div class="col-md-7">
      <div class="jumbotron center" id="top-main">
        <h1 id="top-main-title">TaskApp-v2</h1>
        <p>TaskAppは簡易ToDo管理ツールです。</p>
        <p>↓↓初めてのご利用↓↓</p>
        <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" %>
      </div>
    </div>
    
    <div class="col-md-4">
      <h1>ログイン</h1>
      <label class="label-form">メールアドレス</label>
      <input class="form-control" type="email">
      <label class="label-form">パスワード</label>
      <input class="form-control" type="password">
      <input class="form-check-input" type="checkbox">
      <label class="form-check-label">ログイン情報を記憶する</label>
      <%= link_to "ログイン", login_path, class: "btn btn-primary btn-block" %>
    </div>
  </div>
</div>
